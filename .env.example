# Environment Variables for Aurora RAG Chatbot
# Copy this file to .env and fill in your values

# =============================================================================
# API Keys
# =============================================================================
GROQ_API_KEY=your_groq_api_key_here
GOOGLE_SHEETS_CREDENTIALS_FILE=config/credentials.json

# =============================================================================
# Security
# =============================================================================
# Generate with: openssl rand -base64 32
GRAFANA_SECRET_KEY=change_this_to_a_random_secret_at_least_32_chars_long

# =============================================================================
# Database
# =============================================================================
REDIS_URL=redis://redis:6379/0

# =============================================================================
# Feature Flags
# =============================================================================
DEBUG=false
STRICT_MODE=true
AUTO_SYNC_ENABLED=true

# =============================================================================
# Monitoring Credentials
# =============================================================================
# Prometheus
PROMETHEUS_ADMIN_USER=admin
PROMETHEUS_ADMIN_PASSWORD=EXPELLIARMUS@ISTE

# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=EXPELLIARMUS@ISTE
