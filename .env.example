# ═══════════════════════════════════════════════════════════════
# AURORA FEST RAG CHATBOT - ENVIRONMENT CONFIGURATION
# ═══════════════════════════════════════════════════════════════

# Groq LLM API Keys (Fallback support for rate limits)
# Primary key (required)
GROQ_API_KEY=your_primary_groq_api_key_here
# Backup keys (optional - separated by commas)
GROQ_API_KEY_FALLBACK=backup_key_1,backup_key_2,backup_key_3
# System will automatically rotate through keys if one hits rate limit

# Google Sheets Configuration
GOOGLE_SHEETS_ID=your_google_sheets_id_here
GOOGLE_CREDENTIALS_FILE=credentials.json

# RAG Configuration (Production-Optimized)
SIMILARITY_THRESHOLD=0.50
TOP_K_RESULTS=5
LLM_TEMPERATURE=0.0  # STRICT: No creativity, factual only (prevents hallucination)

# Logging
LOG_LEVEL=WARNING  # Set to INFO for debugging, WARNING for production

# Auto-sync settings
SYNC_INTERVAL_MINUTES=5
AUTO_SYNC=true

# Security Configuration (CORS)
# Comma-separated list of allowed domains (no spaces!)
# Local development:
ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000
# Production example:
# ALLOWED_ORIGINS=https://your-app.run.app,https://aurora-fest.vercel.app

# Dashboard Authentication
# Change these to secure your analytics dashboard!
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=aurora2025

